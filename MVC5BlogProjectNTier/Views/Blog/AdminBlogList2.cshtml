@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList2";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">BLOG Listesi</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>

                            <th style="width: 1%">
                              
                                ID
                            </th>

                            <th style="width: 24%">

                                BLOG BAŞLIK

                            </th>

                            <th style="width: 10%">

                                YAZAR

                            </th>

                            <th>

                               BEĞENİ ORANI

                            </th>

                            <th style="width: 4%" class="text-center">

                                KATEGORİ
                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var i in Model)
                        {


                            <tr>

                                <td>@i.BlogID</td>
                                <td>@i.BlogTitle</td>
                                <td>

                                    <ul class="list-inline">
                                        <li><small>@i.Author.AuthorNameSurname</small></li>
                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="@i.BlogImage">

                                        </li>

                                        <li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="@i.Author.AuthorImage">

                                        </li>

                                        @*<li class="list-inline-item">

                                            <img alt="Avatar" class="table-avatar" src="/AdminLTE-3.0.4/dist/img/avatar3.png">

                                        </li>*@

                                    </ul>

                                </td>

                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="57" aria-volumemin="0" aria-volumemax="100" style="width: 57%">

                                        </div>

                                    </div>

                                    <small>

                                        57% Complete

                                    </small>

                                </td>

                                <td class="project-state">

                                    <span class="badge badge-success">@i.Categories.CategoryName</span>

                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-primary btn-sm" href="/Blog/BlogReadAll/@i.BlogID/">

                                        <i class="fas fa-folder">

                                        </i>

                                        Sitede Gör

                                    </a>

                                    <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@i.BlogID/">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/Blog/DeleteBlog/@i.BlogID/">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                </td>

                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </section>
</body>

</html>