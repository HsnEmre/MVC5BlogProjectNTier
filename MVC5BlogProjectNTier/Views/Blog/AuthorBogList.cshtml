
@{
    ViewBag.Title = "AuthorBogList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



@{string color = "";
    string casename = "";
}

<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Blog Listem</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>

                            <th style="width: 1%">
                                ID

                            </th>

                            <th style="width: 20%">

                                BLOG BAŞLIK

                            </th>

                            <th>

                                BEĞENİ ORNAI

                            </th>

                            <th style="width: 8%" class="text-center">

                                DURUM

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var i in Model)
                        {
                            if (i.BlogRating >= 80)
                            {
                                color = "post-category text-white bg-success mb-3";
                                casename = "Çok iyi";
                            }
                            if (i.BlogRating <= 84 && i.BlogRating >= 70)
                            {
                                color = "post-category text-white bg-info mb-3";
                                casename = "Başarılı";
                            }
                            if (i.BlogRating <= 69 && i.BlogRating >= 50)
                            {
                                color = "post-category text-white bg-warning mb-3";
                                casename = "Fena değil";
                            }
                            if (i.BlogRating <= 49 && i.BlogRating >= 0)
                            {
                                color = "post-category text-white bg-danger mb-3";
                                casename = "Vasat";
                            }



                            <tr>

                                <td>@i.BlogID</td>
                                <td>@i.BlogTitle</td>


                                <td class="project_progress">

                                    <div class="progress progress-sm">

                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="@i.BlogRating" aria-volumemin="0" aria-volumemax="10" style="width:@i.BlogRating%">

                                        </div>

                                    </div>

                                    <small>

                                        Aldığı Puan: @i.BlogRating

                                    </small>

                                </td>

                                <td class="project-state">

                                    <span class=" badge @color">@casename</span>

                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-info btn-sm" href="/User/UpdateBlog/@i.BlogID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="#">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>

                                </td>

                            </tr>
                        }
                    </tbody>

                </table>


            </div>
        </div>
    </section>
    <a href="/User/AddNewBlog" class="btn btn-primary">Yeni Blog Ekle</a>
</body>

</html>