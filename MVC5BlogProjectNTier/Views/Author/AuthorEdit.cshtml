@model EntityLayer.Concrete.Author
@{
    ViewBag.Title = "AuthorEdit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<form class="form-horizontal" method="post">
    <div class="form-group">

        <div class="col-sm-10">
            @Html.HiddenFor(x => x.AuthorID, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Yazar Adı Soyadı", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.AuthorNameSurname, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Şifre", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Resim Yolu", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.AuthorImage, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Hakkında", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.AuthorAbout, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Unvan", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.AuthorTitle, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Kısa Hakkında", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.AboutShort, 10, 50, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Yazar Mail", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.AuthorMail, 10, 50, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Telefon", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.PhoneNumber, 10, 50, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-info">Kaydet</button>
        </div>
    </div>
</form>





