@model IEnumerable<EntityLayer.Concrete.Comments>

<div class="pt-5">
    <h3 class="mb-5">6 Comments</h3>
    <ul class="comment-list">
        @foreach (var item in Model)
        {
            <li class="comment">
                <div class="vcard">
                    <img src="/miniblog/images/indir.jfif" alt="Image placeholder">
                </div>
                <div class="comment-body">
                    <h3>@item.UserName</h3>
                    <div class="meta">@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</div>
                    <p>@item.CommentText</p>
                    <p><a href="#" class="reply rounded">Reply</a></p>
                </div>
            </li>

        }

    </ul>
    <!-- END comment-list -->

    @Html.Action("LeaveAComment", "Comment")
</div>