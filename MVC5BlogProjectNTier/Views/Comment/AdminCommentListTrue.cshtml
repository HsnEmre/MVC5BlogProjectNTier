@model IEnumerable<EntityLayer.Concrete.Comments>
@{
    ViewBag.Title = "AdminCommentList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<!DOCTYPE html>

<html>

<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="card-body">
                    @foreach (var i in Model)
                    {

                        <div class="post">
                            <div class="user-block">
                                <img class="img-circle img-bordered-sm" src="@i.Blogs.BlogImage" alt="user image">
                                <span class="username">
                                    <a href="#">@i.UserName - @i.Blogs.BlogTitle</a>
                                    <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                                    <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                                </span>
                                <span class="description">@(((DateTime)i.CommentDate).ToString("dd-MMM-yyyy"))</span>
                            </div>
                            <p>
                                @i.CommentText
                            </p>
                            <p>
                                <a href="/Comment/CommentStatusChangeToFalseAction/@i.CommentID" class="link-black text-sm mr-2"><i class="fas fa-close"></i>Yorumu Kaldır</a>
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

</body>

</html>