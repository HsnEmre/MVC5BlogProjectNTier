@model IEnumerable<EntityLayer.Concrete.Categories>
@{
    ViewBag.Title = "AdminCategoryList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@{
    string color = "";
}

<!DOCTYPE html>

<html>



<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">KATEGORİLER</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>

                            <th style="width: 1%">
                                ID

                            </th>

                            <th style="width: 20%">

                                KATEGORİ ADI

                            </th>

                          


                            <th style="width: 8%" class="text-center">

                                KATEGORİ DURUM

                            </th>

                            <th style="width: 20%">

                            </th>

                        </tr>

                    </thead>

                    <tbody>
                        @foreach (var i in Model)
                        {
                            if (i.CategoryStatus == true)
                            {
                                color = "post-category text-white bg-success mb-3";
                            }
                            else
                            {
                                color = "post-category text-white bg-warning mb-3";
                            }

                            <tr>

                                <td>@i.CategoryID</td>
                                <td>@i.CategoryName</td>
                               

                                <td class="project-state">

                                    <span class="@color"> @i.CategoryStatus</span>

                                </td>

                                <td class="project-actions text-right">

                                    <a class="btn btn-primary btn-sm" href="/Blog/BlogByCategory/@i.CategoryID">

                                        <i class="fas fa-folder">

                                        </i>

                                        Yazılar

                                    </a>

                                    <a class="btn btn-info btn-sm" href="/Category/CategoryEdit/@i.CategoryID">

                                        <i class="fas fa-pencil-alt">

                                        </i>

                                        Düzenle

                                    </a>

                                    <a class="btn btn-danger btn-sm" href="/Category/CategoryDelete/@i.CategoryID">

                                        <i class="fas fa-trash">

                                        </i>

                                        Sil

                                    </a>
                                    <a class="btn btn-success btn-sm" href="/Category/CategoryStatusTrue/@i.CategoryID">

                                        <i class="fas fa-atom">

                                        </i>

                                        Aktif Yap

                                    </a>

                                </td>

                            </tr>
                        }
                    </tbody>

                </table>
                <br />
                <br />
                <button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni kategori ekle</button>
                <div class="modal" id="Modal1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h2 class="modal-title">Yeni Kategori ekleme Paneli</h2>
                            </div>
                            <form action="/Category/AdminCategoryAdd/" method="post">
                                <div class="modal-body">
                                    <label>Kategori Ad</label>
                                    <input type="text" name="CategoryName" class="form-control" />
                                    <label>Kategori Açıklama</label>
                                    <input type="text" name="CategoryDescription" class="form-control" />
                                </div>
                                <button class="btn btn-info">Kaydet</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>