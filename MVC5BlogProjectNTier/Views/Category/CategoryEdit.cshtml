@model EntityLayer.Concrete.Categories
@{
    ViewBag.Title = "CategoryEdit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<form class="form-horizontal" method="post">
    <div class="form-group">

        <div class="col-sm-10">
            @Html.HiddenFor(x => x.CategoryID, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Kategori Adı", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        </div>
    </div>    
    <div class="form-group">
        @Html.Label("Kategori Açıklama ", new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.CategoryDescription, 10, 50, new { @class = "form-control" })
        </div>
    </div>
   
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-info">Kaydet</button>
        </div>
    </div>
</form>





